# Test Environment Configuration
NODE_ENV=test
PORT=8001
HOST=localhost

# Use in-memory storage for testing
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=

# No Redis for testing (use memory)
REDIS_HOST=
REDIS_PORT=

# Security
SESSION_SECRET=test-secret-key-for-testing-only
JWT_SECRET=test-jwt-secret-key-must-be-32-characters-long
ENCRYPTION_KEY=test-encryption-key-32-characters

# External APIs - Use demo mode
AMADEUS_CLIENT_ID=demo-client-id
AMADEUS_CLIENT_SECRET=demo-client-secret
CLAUDE_API_KEY=

# Features
FEATURE_DEMO_MODE=true
FEATURE_EMAIL_NOTIFICATIONS=true

# Email (test mode - won't send)
SMTP_HOST=smtp.test.com
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=testpass
EMAIL_FROM=Test Agent <test@example.com>

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false
LOG_LEVEL=error

# Test specific
TEST_MODE=true
PRICE_MONITOR_CRON_PATTERN=*/1 * * * *
PRICE_MONITOR_BATCH_SIZE=10
PRICE_MONITOR_MAX_CONCURRENT=2