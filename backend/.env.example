# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Session Configuration
SESSION_SECRET=your-secure-session-secret-at-least-32-characters

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Amadeus API
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_ENVIRONMENT=test

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_ENVIRONMENT=sandbox

# Notification Configuration
NOTIFICATION_SERVICE=sendgrid

# Feature Flags
FEATURE_DEMO_MODE=true
FEATURE_EMAIL_NOTIFICATIONS=true

# API Configuration
API_TIMEOUT_MS=30000
API_RETRY_ATTEMPTS=3

# Data Storage
DATA_DIRECTORY=./data

# Logging
LOG_LEVEL=info
LOG_DIRECTORY=./logs

# Monitoring Configuration  
PRICE_CHECK_INTERVAL_HOURS=24
MAX_ACTIVE_SEARCHES_PER_USER=5
DATA_RETENTION_DAYS=90